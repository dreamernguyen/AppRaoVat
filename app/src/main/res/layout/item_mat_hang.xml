<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lnChiTiet"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/background1"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:elevation="8dp"
    android:orientation="vertical">
    <ImageView
        android:layout_alignParentTop="true"
        android:id="@+id/imgHinhAnh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tvTieuDe"
        android:layout_below="@+id/imgHinhAnh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:textSize="13dp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvGiaBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTieuDe"
        android:padding="5dp"
        android:textColor="@color/red"
        android:textSize="10dp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGiaBan"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvThoiGian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:textSize="8dp"/>

        <TextView
            android:id="@+id/tvDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvGiaBan"
            android:layout_toRightOf="@id/tvThoiGian"
            android:padding="5dp"
            android:textSize="8dp" />
    </LinearLayout>
</RelativeLayout>